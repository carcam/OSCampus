<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="hidden">
        <field name="id" type="hidden"/>
    </fieldset>

    <fieldset>
        <field
            name="title"
            type="text"
            label="COM_OSCAMPUS_COURSE_TITLE_LABEL"
            class="input-xxlarge input-large-text"
            size="50"
            required="true"/>

        <field
            name="alias"
            type="text"
            label="COM_OSCAMPUS_COURSE_ALIAS_LABEL"
            hint="JFIELD_ALIAS_PLACEHOLDER"
            class="input-xxlarge input-large-text"
            size="50"/>

        <field
            name="pathways"
            type="oscampus.pathways"
            label="COM_OSCAMPUS_COURSE_PATHWAYS_LABEL"/>

        <field
            name="tags"
            type="oscampus.tags"
            label="COM_OSCAMPUS_COURSE_TAGS_LABEL"/>
    </fieldset>

    <fieldset name="main" label="COM_OSCAMPUS_COURSE_TAB_MAIN_LABEL">
        <field
            name="teachers_id"
            type="oscampus.teacher"
            label="COM_OSCAMPUS_COURSE_TEACHER_LABEL">
            <option value="">COM_OSCAMPUS_OPTION_SELECT_TEACHER</option>
        </field>

        <field
            name="image"
            type="media"
            label="COM_OSCAMPUS_COURSE_IMAGE_LABEL"
            class="readonly"/>

        <field
            name="length"
            type="text"
            label="COM_OSCAMPUS_COURSE_LENGTH_LABEL"
            description="COM_OSCAMPUS_COURSE_LENGTH_DESC"/>

        <field
            name="difficulty"
            type="oscampus.difficulty"
            label="COM_OSCAMPUS_COURSE_DIFFICULTY_LABEL"
            required="true">
            <option value="">COM_OSCAMPUS_OPTION_SELECT_DIFFICULTY</option>
        </field>

        <field
            name="released"
            type="calendar"
            label="COM_OSCAMPUS_COURSE_RELEASED_LABEL"
            description="COM_OSCAMPUS_COURSE_RELEASED_DESC"
            required="true"/>

        <field
            name="published"
            type="list"
            label="COM_OSCAMPUS_PUBLISHED"
            required="true">
            <option value="0">JUNPUBLISHED</option>
            <option value="1">JPUBLISHED</option>
        </field>

        <field
            name="access"
            type="accesslevel"
            label="COM_OSCAMPUS_ACCESS_LEVEL"
            required="true"/>
        <!--
         @TODO
         tags
         lessons
        -->
    </fieldset>

    <fieldset name="descriptions" label="COM_OSCAMPUS_COURSE_TAB_DESCRIPTIONS_LABEL">
        <field
            name="introtext"
            label="COM_OSCAMPUS_COURSE_INTROTEXT_LABEL"
            type="editor"
            filter="safehtml"
            buttons="true"
            hide="readmore,pagebreak"/>

        <field
            name="description"
            label="COM_OSCAMPUS_COURSE_DESCRIPTION_LABEL"
            type="editor"
            required="true"
            filter="safehtml"
            buttons="true"
            hide="readmore,pagebreak"/>

    </fieldset>
</form>
