<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
            name="search"
            type="text"
            label="COM_OSCAMPUS_FILTER_SEARCH_LABEL"
            description="COM_OSCAMPUS_FILTER_SEARCH_DESC"
            hint="COM_OSCAMPUS_FILTER_SEARCH_HINT"
        />
    </fields>

    <fields name="list">
        <field
            name="fullordering"
            type="list"
            label="COM_OSCAMPUS_LIST_FULL_ORDERING"
            description="COM_OSCAMPUS_LIST_FULL_ORDERING_DESC"
            onchange="this.form.submit();"
            default="tag.title ASC"
        >
            <option value="">COM_OSCAMPUS_SORT_HEADING</option>
            <option value="tag.title ASC">COM_OSCAMPUS_SORT_TITLE_ASC</option>
            <option value="tag.title DESC">COM_OSCAMPUS_SORT_TITLE_DESC</option>
            <option value="tag.id ASC">COM_OSCAMPUS_SORT_ID_ASC</option>
            <option value="tag.id DESC">COM_OSCAMPUS_SORT_ID_DESC</option>
        </field>

        <field
            name="limit"
            type="limitbox"
            class="input-mini"
            default="25"
            onchange="this.form.submit();"
        />
    </fields>
</form>
