<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="main" label="COM_OSCAMPUS_TEACHER_PAGE_MAIN">
        <field
            name="id"
            type="hidden"
            class="readonly"
            label="COM_OSCAMPUS_ID_LABEL"
            description="COM_OSCAMPUS_ID_DESC"
            size="10"
            default="0"
            readonly="true"/>

        <field
            name="users_id"
            type="user"
            label="COM_OSCAMPUS_TEACHER_USER_LABEL"
            description="COM_OSCAMPUS_TEACHER_USER_DESC"
            class="input-xxlarge input-large-text"
            required="true"/>

        <field
            name="bio"
            type="editor"
            label="COM_OSCAMPUS_TEACHER_BIO_LABEL"
            description="COM_OSCAMPUS_TEACHER_BIO_DESC"
            required="true"
            filter="safehtml"
            buttons="true"
            hide="readmore,pagebreak"
            labelclass="hidden"/>

        <field
            name="image"
            type="media"
            label="COM_OSCAMPUS_TEACHER_IMAGE_LABEL"
            description="COM_OSCAMPUS_TEACHER_IMAGE_DESC"
            required="true"/>

        <fields name="links">
            <field
                name="website"
                type="oscampus.links"
                label="COM_OSCAMPUS_TEACHER_WEBSITE"/>

            <field
                name="email"
                type="oscampus.links"
                label="COM_OSCAMPUS_TEACHER_EMAIL"/>

            <field
                name="blog"
                type="oscampus.links"
                label="COM_OSCAMPUS_TEACHER_BLOG"/>

            <field
                name="facebook"
                type="oscampus.links"
                label="COM_OSCAMPUS_TEACHER_FACEBOOK"/>

            <field
                name="twitter"
                type="oscampus.links"
                label="COM_OSCAMPUS_TEACHER_TWITTER"/>

        </fields>

        <field
            name="created_by"
            type="user"
            label="COM_OSCAMPUS_TEACHER_CREATED_BY_LABEL"
            description="COM_OSCAMPUS_TEACHER_CREATED_BY_DESC"/>

        <field
            name="created_by_alias"
            type="text"
            label="COM_OSCAMPUS_TEACHER_CREATED_BY_ALIAS_LABEL"
            description="COM_OSCAMPUS_TEACHER_CREATED_BY_ALIAS_DESC"/>

        <field name="checked_out" type="hidden" filter="unset"/>
        <field name="checked_out_time" type="hidden" filter="unset"/>
    </fieldset>
</form>
