<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="hidden">
        <field name="id" type="hidden"/>
    </fieldset>

    <fieldset name="main">
        <field
            name="title"
            type="text"
            label="COM_OSCAMPUS_PATHWAY_TITLE_LABEL"
            class="input-xxlarge input-large-text"
            required="true"/>

        <field
            name="alias"
            type="text"
            label="COM_OSCAMPUS_PATHWAY_ALIAS_LABEL"
            description="COM_OSCAMPUS_PATHWAY_ALIAS_DESC"/>

        <field
            name="image"
            type="media"
            label="COM_OSCAMPUS_PATHWAY_IMAGE_LABEL"
            class="readonly"/>

        <field
            name="users_id"
            type="user"
            label="COM_OSCAMPUS_PATHWAY_OWNER_LABEL"
            description="COM_OSCAMPUS_PATHWAY_OWNER_DESC"/>

        <field
            name="description"
            type="editor"
            label="COM_OSCAMPUS_PATHWAY_DESCRIPTION_LABEL"
            required="true"
            filter="safehtml"
            buttons="true"
            hide="readmore,pagebreak"
            labelclass="hidden"/>

        <field
            name="published"
            type="list"
            label="COM_OSCAMPUS_PUBLISHED"
            class="chzn-color-state"
            required="true">
            <option value="0">JUNPUBLISHED</option>
            <option value="1">JPUBLISHED</option>
        </field>

        <field
            name="access"
            type="accesslevel"
            label="COM_OSCAMPUS_ACCESS_LEVEL"
            required="true"/>

    </fieldset>
</form>
