# Keep unneeded composer files out of repo
##########################################
*
!.gitignore

# Need the autoloaders
!autoload.php
!composer/
!composer/*

# Pimple
!pimple/
pimple/pimple/*
!pimple/pimple/LICENSE
!pimple/pimple/src/
pimple/pimple/src/Pimple/**
!pimple/pimple/src/Pimple/*

# Mobile_Detect
!mobiledetect/
mobiledetect/*
!mobiledetect/mobiledetectlib/
mobiledetect/mobiledetectlib/*
!mobiledetect/mobiledetectlib/LICENSE.txt
!mobiledetect/mobiledetectlib/Mobile_Detect.php

# Twig
!twig/
!twig/**/*
twig/twig/*
!twig/twig/lib/

# Allow Joomla dependencies
!joomla/
!joomla/**/*

# JString (For support in j2.5)
joomla/string/*
!joomla/string/LICENSE
!joomla/string/src/

