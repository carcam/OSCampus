{% extends 'admin_list.html.twig' %}

{% block list_head_upper %}
    <tr class="head2">
        <th colspan="5">{{ 'COM_OSCAMPUS_LESSON'|lang }}</th>
        <th colspan="2">{{ 'COM_OSCAMPUS_MODULE'|lang }}</th>
        <th colspan="4">{{ 'COM_OSCAMPUS_COURSE'|lang }}</th>
        <th></th>
    </tr>
{% endblock %}

{% block list_head %}
    {{ list_macro.th_checkall() }}
    {{ list_macro.th_ordering(ordering, items) }}
    {{ list_macro.th_sort('lesson.published', 'COM_OSCAMPUS_PUBLISHED', ordering.direction, ordering.order) }}
    {{ list_macro.th_sort('lesson.title', 'COM_OSCAMPUS_TITLE', ordering.direction, ordering.order) }}
    {{ list_macro.th_sort('lesson.type', 'COM_OSCAMPUS_LESSON_TYPE', ordering.direction, ordering.order) }}
    {{ list_macro.th_sort('module.published', 'COM_OSCAMPUS_PUBLISHED', ordering.direction, ordering.order) }}
    {{ list_macro.th_sort('module.title', 'COM_OSCAMPUS_TITLE', ordering.direction, ordering.order) }}
    {{ list_macro.th_sort('course.published', 'COM_OSCAMPUS_PUBLISHED', ordering.direction, ordering.order) }}
    {{ list_macro.th_sort('course.title', 'COM_OSCAMPUS_TITLE', ordering.direction, ordering.order) }}
    {{ list_macro.th_sort('course.released', 'COM_OSCAMPUS_COURSE_RELEASED_LABEL', ordering.direction, ordering.order) }}
    {{ list_macro.th_sort('course.difficulty', 'COM_OSCAMPUS_COURSE_DIFFICULTY_LABEL', ordering.direction, ordering.order) }}
    {{ list_macro.th_sort('lesson.id', 'COM_OSCAMPUS_ID', ordering.direction, ordering.order) }}
{% endblock %}

{% block list_item %}
    {{ list_macro.td_check(loop.index0, item.id) }}
    {{ list_macro.td_ordering(loop.index0, item.ordering, items, ordering, pagination) }}
    {{ list_macro.td_published(item.published, loop.index0, 'lessons.') }}
    {{ list_macro.td_edit_link(item, loop.index0, 'lesson', 'lessons.', item.title, item.alias) }}
    {{ list_macro.td_text(item.type) }}
    {{ list_macro.td_published(item.module_published, loop.index0, 'modules.') }}
    {{ list_macro.td_text(item.module_title) }}
    {{ list_macro.td_published(item.course_published, loop.index0, 'courses.') }}
    {{ list_macro.td_text(item.course_title) }}
    {{ list_macro.td_text(item.course_released) }}
    {{ list_macro.td_text(item.course_difficulty) }}
    {{ list_macro.td_text(item.id, 'center') }}

{% endblock %}
