{% extends 'admin_form.html.twig' %}

{% set main_legend = 'COM_OSCAMPUS_PAGE_VIEW_LESSON_' ~ (item.id ? 'EDIT' : 'ADD')|lang %}

{% block form_header %}
    {{ html('osc.render.formfield', form.getField('title'))|raw }}
    {{ html('osc.render.formfield', form.getField('alias'))|raw }}
{% endblock %}

{% block form_body %}
    {{ form_macro.tabs_startset(form) }}

    {{ form_macro.tabs_add(form, 'main') }}
    {{ form_macro.render_fieldset(form, 'main', false) }}
    {{ form_macro.tabs_end() }}

    {{ form_macro.tabs_add(form, 'content', 'COM_OSCAMPUS_LESSON_TAB_CONTENT_LABEL'|lang) }}
    {{ form_macro.render_fieldset(form, 'content') }}
    {{ form_macro.tabs_end() }}

    {{ form_macro.tabs_add(form, 'description', 'COM_OSCAMPUS_LESSON_TAB_DESCRIPTION_LABEL'|lang) }}
    {{ form_macro.render_field(form, 'description', false) }}
    {{ form_macro.tabs_end() }}

    {{ form_macro.tabs_add(form, 'metadata') }}
    {{ html('osc.render.adminfieldset', form, 'metadata', false)|raw }}
    {{ form_macro.tabs_end() }}

    {{ form_macro.tabs_endset() }}
{% endblock %}
