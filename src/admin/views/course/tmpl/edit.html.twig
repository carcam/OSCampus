{% extends "admin_form.html.twig" %}

{% block form_top %}
    {{ html('osc.render.formfield', form.getField('title'))|raw }}
    {{ html('osc.render.formfield', form.getField('alias'))|raw }}
{% endblock %}

{% block form_body %}
    {{ form_macro.tabs_startset(form, {'active' : 'main-panel'}) }}

    {{ form_macro.tabs_add(form, 'main') }}
    {{ form_macro.render_fieldset(form, 'main', true, '4') }}
    {{ form_macro.render_field(form, 'pathways', true, '3') }}
    {{ form_macro.render_field(form, 'tags', true, '2') }}
    {{ form_macro.tabs_end() }}

    {{ form_macro.tabs_add(form, 'descriptions') }}
    {{ form_macro.render_field(form, 'introtext', true, '6') }}
    {{ form_macro.render_field(form, 'description', true, '6') }}
    {{ form_macro.tabs_end() }}

    {{ form_macro.tabs_add(form, 'lessons', 'COM_OSCAMPUS_LESSONS'|lang) }}
    {{ view.loadTemplate('lessons')|raw }}
    {{ form_macro.tabs_panel_end() }}

    {{ form_macro.tabs_end() }}
{% endblock %}
