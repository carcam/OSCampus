{{ html('osc.sortable', '.oscampus-sortable')|raw }}
<ul class="oscampus-sortable">
    {% for module in lessons %}
        <li>{{ module.title }}
            <ul class="oscampus-sortable">
                {% for lesson in module.lessons %}
                    <li>{{ lesson.title }}</li>
                {% endfor %}
            </ul>
        </li>
    {% endfor %}
</ul>

