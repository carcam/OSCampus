{% extends 'admin_list.html.twig' %}

{% block list_head %}
    {{ list_macro.th_checkall() }}
    {{ list_macro.th_ordering(ordering, items) }}
    {{ list_macro.th_sort('course.published', 'COM_OSCAMPUS_PUBLISHED', ordering.direction, ordering.order) }}
    {{ list_macro.th_sort('course.title', 'COM_OSCAMPUS_TITLE', ordering.direction, ordering.order) }}
    {{ list_macro.th_sort('tags', 'COM_OSCAMPUS_TAGS', ordering.direction, ordering.order) }}
    {{ list_macro.th_sort('pathways', 'COM_OSCAMPUS_COURSE_PATHWAYS_LABEL', ordering.direction, ordering.order) }}
    {{ list_macro.th_sort('course.difficulty', 'COM_OSCAMPUS_COURSE_DIFFICULTY_LABEL', ordering.direction, ordering.order) }}
    {{ list_macro.th_sort('teacher_user.name', 'COM_OSCAMPUS_TEACHER', ordering.direction, ordering.order) }}
    {{ list_macro.th_sort('viewlevel.title', 'COM_OSCAMPUS_ACCESS_LEVEL', ordering.direction, ordering.order) }}
    {{ list_macro.th_sort('course.id', 'COM_OSCAMPUS_ID', ordering.direction, ordering.order, '1') }}
{% endblock %}

{% block list_item %}
    {{ list_macro.td_check(loop.index0, item.id) }}
    {{ list_macro.td_ordering(loop.index0, item.ordering, items, ordering, pagination) }}
    {{ list_macro.td_published(item.published, loop.index0, 'courses.') }}
    {{ list_macro.td_edit_link(item, loop.index0, 'course', 'courses.', item.title, item.alias) }}
    {{ list_macro.td_text(item.tags) }}
    {{ list_macro.td_text(item.pathways) }}
    {{ list_macro.td_text(('COM_OSCAMPUS_COURSE_DIFFICULTY_' ~ item.difficulty|upper)|lang) }}
    {{ list_macro.td_text(item.teacher_name) }}
    {{ list_macro.td_text(item.viewlevel_title) }}
    {{ list_macro.td_text(item.id, 'center') }}
{% endblock %}
