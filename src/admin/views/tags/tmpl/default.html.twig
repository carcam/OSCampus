{% extends "admin_list.html.twig" %}

{% block list_head %}
    {{ list_macros.th_checkall() }}
    {{ list_macros.th_sort('tag.title', 'COM_OSCAMPUS_TITLE', list_dir, list_order) }}
    {{ list_macros.th_sort('tag.id', 'COM_OSCAMPUS_ID', list_dir, list_order, '1') }}
{% endblock %}

{% block list_item %}
    {{ list_macros.td_check(loop.index0, get_table_instance('tags', item.id)) }}
    {{ list_macros.td_edit_link('tag', item.title, item.id, item.alias) }}
    {{ list_macros.td_text(item.id, 'center') }}
{% endblock %}
