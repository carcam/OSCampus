{% extends 'admin_list.html.twig' %}

{% block list_head %}
    {{ list_macro.th_checkall() }}
    {{ list_macro.th_sort('tag.title', 'COM_OSCAMPUS_TITLE', ordering.direction, ordering.order) }}
    {{ list_macro.th_sort('tag.id', 'COM_OSCAMPUS_ID', ordering.direction, ordering.order, '1') }}
{% endblock %}

{% block list_item %}
    {{ list_macro.td_check(loop.index0, item.id) }}
    {{ list_macro.td_edit_link(item, loop.index0, 'tag', 'tags.') }}
    {{ list_macro.td_text(item.id, 'center') }}
{% endblock %}
